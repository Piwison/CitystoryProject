# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Database URL (used by some ORMs and frameworks)
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres

# Additional PostgreSQL Settings (optional)
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_IDLE_TIMEOUT=300 # seconds
POSTGRES_STATEMENT_TIMEOUT=60000 # milliseconds

# Example environment variables for this project
#
# Copy frontend variables to citystory/.env.local
# Copy backend variables to citystory_backend/.env

# --- Frontend (Next.js) ---
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# --- Backend (Django) ---
DEBUG=True
SECRET_KEY=your_secret_key
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432 